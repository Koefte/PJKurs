<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_default"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/panel_margin"
        android:orientation="vertical"
        android:background="@drawable/radius"
        android:padding="@dimen/panel_margin"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp">

        <TextView
            style="@style/standard_text"

            android:text="@string/title_welcome"
            android:textSize="@dimen/font_size_header1"
            />
        <TextView
            style="@style/standard_text"

            android:text="@string/title_login"
            android:textSize="@dimen/font_size_header3"
            />

        <TextView
            style="@style/standard_text"

            android:paddingTop="@dimen/topic_split_margin_top"

            android:text="@string/text_input_email"
            />

        <TextView
            style="@style/standard_text"

            android:paddingTop="@dimen/topic_split_margin_top"

            android:text="@string/text_input_username"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>