<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_default"
    tools:context=".LoginActivity">

    <View
        android:id="@+id/login_view_background"
        android:layout_width="341dp"
        android:layout_height="658dp"
        android:background="@drawable/radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/login_view_header"
        android:layout_width="@dimen/textfield_touch_width"
        android:layout_height="@dimen/textfield_touch_height"
        android:layout_marginTop="50dp"
        android:text="@string/title_login"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_header1"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_input_username"
        android:layout_width="@dimen/textfield_touch_width"
        android:layout_height="@dimen/textfield_touch_height"
        android:inputType="text"
        android:text="@string/text_input_username"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_header2"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/login_input_email"
        android:layout_width="@dimen/textfield_touch_width"
        android:layout_height="@dimen/textfield_touch_height"
        android:inputType="textEmailAddress"
        android:text="@string/text_input_email"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_header2"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <EditText
        android:id="@+id/login_input_password_initial"
        android:layout_width="@dimen/textfield_touch_width"
        android:layout_height="@dimen/textfield_touch_height"
        android:inputType="textPassword"
        android:text="@string/password_placeholder"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_header2"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/login_input_password_confirm"
        android:layout_width="@dimen/textfield_touch_width"
        android:layout_height="@dimen/textfield_touch_height"
        android:inputType="textPassword"
        android:text="@string/password_placeholder"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_header2"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="437dp" />


</androidx.constraintlayout.widget.ConstraintLayout>