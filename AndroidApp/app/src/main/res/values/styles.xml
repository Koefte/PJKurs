<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wrap_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="standard_text" parent="wrap_content_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_standard</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="icon_view">
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="input_text" parent="wrap_content_style">
        <item name="android:layout_width">@dimen/input_text_width</item>
    </style>

    <style name="navbar_icon">
    </style>
</resources>
